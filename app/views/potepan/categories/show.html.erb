<% content_for(:title, @taxon.name) %>
<!-- LIGHT SECTION -->
<section class="lightSection clearfix pageHeader">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="page-title">
          <h2><%= @taxon.name %></h2>
        </div>
      </div>
      <div class="col-xs-6">
        <ol class="breadcrumb pull-right">
          <li>
            <%= link_to "Home", potepan_index_path %>
          </li>
          <li>
            <a href="#">shop</a>
          </li>
          <li class="active"><%= @taxon.name %></li>
        </ol>
      </div>
    </div>
  </div>
</section>
<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix productsContent">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
        <%= render "shared/product_category", taxonomies: @taxonomies, products: @products %>
        <%= render "shared/color_category" %>
        <%= render "shared/size_category" %>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-12">
        <%= render "shared/sidebar" %>
        <div class="row">
          <%= render partial: "potepan/categories/product_box", collection: @products, as: 'product' %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render "shared/light_section" %>
